source "https://rubygems.org"

gem "activerecord", ">=3.2", "<4"

group :development, :test do
  platform :ruby do
    gem "pg", "< 1.0"
    gem "pry", "~> 0.10.4"
    gem "pry-byebug", "~> 3.4.2"
  end

  platform :jruby do
    gem 'activerecord-postgresql-adapter'
    gem 'activerecord-jdbcpostgresql-adapter'
  end

  gem "rspec", "~> 3.2.0"
end
